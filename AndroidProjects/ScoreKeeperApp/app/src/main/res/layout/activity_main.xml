<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scorekeeperapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:text="@string/archer_A"
                style="@style/archer_A"/>

            <TextView
                android:id="@+id/team_a_score"
                android:text="@string/number_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="46sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:shadowColor="#000000"
                android:shadowRadius="9.5"
                android:shadowDx="2"
                android:shadowDy="2"
                android:paddingBottom="24dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addNineForTeamA"
                android:background="#FBC02D"
                android:text="yellow ring" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="#D50000"
                android:onClick="addSevenForTeamA"
                android:text="red ring" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addFiveForTeamA"
                android:background="#00BCD4"
                android:text="blue ring" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addThreeForTeamA"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:text="black ring" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addOneForTeamA"
                android:background="#E0E0E0"
                android:text="white ring" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/smallarcherytarget"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/archer_B"
                android:text="@string/archer_B"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="46sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:shadowColor="#000000"
                android:shadowRadius="9.5"
                android:shadowDx="2"
                android:shadowDy="2"
                android:paddingBottom="24dp"
                android:text="0"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addNineForTeamB"
                android:background="#FBC02D"
                android:text="yellow ring" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="#D50000"
                android:onClick="addSevenForTeamB"
                android:text="red ring" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addFiveForTeamB"
                android:background="#00BCD4"
                android:text="blue ring"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addThreeForTeamB"
                android:background="#000000"
                android:textColor="#FFFFFF"
                android:text="black ring" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:onClick="addOneForTeamB"
                android:background="#E0E0E0"
                android:text="white ring"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/smallarcherytarget"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="resetScores"
        android:text="Reset" />

</RelativeLayout>
